@using MyHome.Common
@{
    this.ViewData["Title"] = "Home Page";
}
<div class="row" style="justify-content:center">
    <span style="font-size:60px">Homes for Everyone</span>
</div>
<div class="text-center">
    <div id="carouselControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/homePage/homePageTr1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/homePage/homePageTr2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/homePage/HomePageTr3.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="row" style="justify-content:center">
    <a class="btn btn-primary" asp-controller="Property" asp-action="AllHomes" asp-route-id="1" style="border-radius:15px; height:50px; width:150px">Get started</a>
</div>
<style>
    .carousel {
        margin-left: 250px;
        max-width: 60%;
        height: 500px
    }

    body {
        background-color: powderblue;
    }
</style>
