@model MyHome.Web.ViewModels.Shared.PaginationViewModel

<nav aria-label="Homes pagination" style="col-sm-6">
    <ul class="pagination">
        <li class="page-item @if (!this.Model.HasPreviousPage) {<text>disabled</text>} ">
            <a class="page-link" asp-action="All" asp-route-id="@this.Model.PreviousPage">Previous</a>
        </li>
        @if (this.Model.PageNumber > 1)
        {
            <li class="page-item"><a class="page-link" asp-controller="Property" asp-action="AllHomes" asp-route-id="@this.Model.PreviousPage" asp-route-type="@this.Model.Title">@this.Model.PreviousPage</a></li>

        }
        <li class="page-item active">
            <a class="page-link">@this.Model.PageNumber<span class="sr-only">(current)</span></a>
        </li>
        @if (this.Model.PageNumber < this.Model.PagesCount)
        {
            <li class="page-item"><a class="page-link" asp-controller="Property" asp-action="AllHomes" asp-route-id="@this.Model.NextPage ">@this.Model.NextPage</a></li>
        }
        <li class="page-item @if (!Model.HasNextPage) { <text>disabled</text> }">
            <a class="page-link" asp-action="All" asp-route-id="@this.Model.NextPage">Next</a>
        </li>
    </ul>
</nav>