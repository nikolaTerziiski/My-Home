@using MyHome.Data.Models
@model MyHome.Web.ViewModels.Property.CreateHomeInputModel
@{
    this.ViewData["Title"] = "Create Home";
    var categories = this.Model.Categories.Select(x => new SelectListItem( x.Value, x.Key));
    var towns = this.Model.Towns.Select(x => new SelectListItem(x.Value, x.Key));

}

<form method="post" class="col-sm-6 offset-3" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" class="form-control" id="inputTitle" placeholder="Enter Title">
        <span asp-validation-for="Title" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" type="text" class="form-control" rows="6" placeholder="Description..."></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <label asp-for="YearOfProduction">Year of production:</label>
            <input asp-for="YearOfProduction" type="text" class="form-control" rows="1" placeholder="Year of production..." value="">
            <span asp-validation-for="YearOfProduction" class="text-danger"></span>
        </div>
        <div class="col-sm-4">
            <label asp-for="Rooms">Rooms</label>
            <input asp-for="Rooms" type="text" class="form-control" rows="1" placeholder="Rooms..." value="">
            <span asp-validation-for="Rooms" class="text-danger"></span>
        </div>
        <div class="col-sm-4">
            <label asp-for="Sqauring">Squaring</label>
            <input asp-for="Sqauring" type="text" class="form-control" rows="1" placeholder="Squaring..." value="">
            <span asp-validation-for="Sqauring" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Adress">Adresss</label>
        <input asp-for="Adress" type="text" class="form-control" id="exampleInputPassword1" placeholder="Adress...">
        <span asp-validation-for="Adress" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="col-sm-4">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="categories"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="col-sm-4">
            <label asp-for="TownId"></label>
            <select asp-for="TownId" class="form-control" asp-items="towns"></select>
            <span asp-validation-for="TownId" class="text-danger"></span>
        </div>
        <div class="col-sm-4">
            <label asp-for="Price">Price in BGN</label>
            <input asp-for="Price" type="text" class="form-control" rows="1" placeholder="Price.." value="">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="HomeStatus">Type of offer</label>
        <select asp-for="HomeStatus" class="form-control" asp-items="@Html.GetEnumSelectList<HomeStatus>().OrderBy(x => x.Value)"></select>
        <span asp-validation-for="HomeStatus" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Images"></label>
        <input asp-for="Images" type="file" class="form-control" multiple />
        <span asp-validation-for="Images" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <small id="emailHelp" class="form-text text-muted">Check our facebook page for more offers! - {link to facebook}</small>
</form>
