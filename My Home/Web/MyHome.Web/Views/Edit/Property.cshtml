@model MyHome.Web.ViewModels.Property.EditHomeInputModel;
@{
    this.ViewData["Title"] = "Create Home";
    var categories = this.Model.Categories.Select(x => new SelectListItem(x.Value, x.Key));
    var towns = this.Model.Towns.Select(x => new SelectListItem(x.Value, x.Key));

}

<form method="post" id="formForEdit">
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" class="form-control" id="inputTitle" placeholder="@Model.Title">
        <span asp-validation-for="Title" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" type="text" class="form-control" rows="6"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="YearOfProduction">Year of production:</label>
        <input asp-for="YearOfProduction" value="@Model.YearOfProduction" type="text" class="form-control" rows="1" placeholder="Year of production...">
        <span asp-validation-for="YearOfProduction" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Adress">Adress</label>
        <input asp-for="Adress" type="text" class="form-control" placeholder="@Model.Adress" />
        <span asp-validation-for="Adress" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rooms">Rooms</label>
        <input asp-for="Rooms" type="text" value="@Model.Rooms" class="form-control" rows="1" placeholder="Rooms...">
        <span asp-validation-for="Rooms" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Sqauring">Squaring</label>
        <input asp-for="Sqauring" type="text" value="@Model.Sqauring" class="form-control" rows="1" placeholder="Squaring...">
        <span asp-validation-for="Sqauring" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" value="@Model.CategoryId" class="form-control" asp-items="categories"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TownId"></label>
        <select asp-for="TownId" value="@Model.TownId" class="form-control" asp-items="towns"></select>
        <span asp-validation-for="TownId" class="text-danger"></span>
    </div>
    <button type="submit" data-toggle="modal" data-target="#saveChangesModal" class="btn btn-primary">Save changes</button>
</form>

<div class="modal" id="saveChangesModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Are you sure?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to change the information in this offer?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="formForEdit.submit()">Save changes</button>
            </div>
        </div>
    </div>
</div>
